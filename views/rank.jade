extends layout

block content
  section.rank.row
    article
      h1 RANK
      table
        thead
          tr
            th(rowspan="2") RANK
            th(rowspan="2") NAME
            th(colspan="3") SCORE
          tr
            th WIN
            th DRAW
            th LOSE
        tbody
          -for(var i = 0; i < rank.length; i++)
            tr
              th #{i+1}
              th #{rank[i].name}
              th #{rank[i].score.win}
              th #{rank[i].score.draw}
              th #{rank[i].score.lose}

